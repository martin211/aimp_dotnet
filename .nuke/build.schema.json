{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Build Schema",
  "$ref": "#/definitions/build",
  "definitions": {
    "build": {
      "type": "object",
      "properties": {
        "AimpPath": {
          "type": "string"
        },
        "Configuration": {
          "type": "string",
          "description": "Configuration to build - Default is 'Debug' (local) or 'Release' (server)",
          "enum": [
            "Debug",
            "Release"
          ]
        },
        "Continue": {
          "type": "boolean",
          "description": "Indicates to continue a previously failed build attempt"
        },
        "DocumentationOutputPath": {
          "type": "string"
        },
        "DocumentationRepositoryUrl": {
          "type": "string"
        },
        "Help": {
          "type": "boolean",
          "description": "Shows the help text for this build assembly"
        },
        "Host": {
          "type": "string",
          "description": "Host for execution. Default is 'automatic'",
          "enum": [
            "AppVeyor",
            "AzurePipelines",
            "Bamboo",
            "Bitrise",
            "GitHubActions",
            "GitLab",
            "Jenkins",
            "Rider",
            "SpaceAutomation",
            "TeamCity",
            "Terminal",
            "TravisCI",
            "VisualStudio",
            "VSCode"
          ]
        },
        "JsJUnit": {
          "type": "boolean"
        },
        "MsBuildPath": {
          "type": "string"
        },
        "NoLogo": {
          "type": "boolean",
          "description": "Disables displaying the NUKE logo"
        },
        "NugetApiKey": {
          "type": "string"
        },
        "NugetSource": {
          "type": "string"
        },
        "Partition": {
          "type": "string",
          "description": "Partition to use on CI"
        },
        "Plan": {
          "type": "boolean",
          "description": "Shows the execution plan (HTML)"
        },
        "Profile": {
          "type": "array",
          "description": "Defines the profiles to load",
          "items": {
            "type": "string"
          }
        },
        "RequestId": {
          "type": "string"
        },
        "RequestSourceBranch": {
          "type": "string"
        },
        "RequestTargetBranch": {
          "type": "string"
        },
        "Root": {
          "type": "string",
          "description": "Root directory during build execution"
        },
        "Skip": {
          "type": "array",
          "description": "List of targets to be skipped. Empty list skips all dependencies",
          "items": {
            "type": "string",
            "enum": [
              "Artifacts",
              "BuildDocumentation",
              "Clean",
              "CleanDocumentation",
              "Compile",
              "CopyTestResults",
              "CustomToc",
              "ExecuteIntegrationTests",
              "Metadata",
              "Pack",
              "PrepareIntegrationTests",
              "PrepareTestConfiguration",
              "PrintBuildParameters",
              "Publish",
              "PublishDocumentation",
              "PushDocumentation",
              "Restore",
              "SonarQube",
              "Version"
            ]
          }
        },
        "Solution": {
          "type": "string",
          "description": "Path to a solution file that is automatically loaded"
        },
        "SonarPassword": {
          "type": "string"
        },
        "SonarProjectKey": {
          "type": "string"
        },
        "SonarProjectName": {
          "type": "string"
        },
        "SonarUrl": {
          "type": "string"
        },
        "SonarUser": {
          "type": "string"
        },
        "Target": {
          "type": "array",
          "description": "List of targets to be invoked. Default is '{default_target}'",
          "items": {
            "type": "string",
            "enum": [
              "Artifacts",
              "BuildDocumentation",
              "Clean",
              "CleanDocumentation",
              "Compile",
              "CopyTestResults",
              "CustomToc",
              "ExecuteIntegrationTests",
              "Metadata",
              "Pack",
              "PrepareIntegrationTests",
              "PrepareTestConfiguration",
              "PrintBuildParameters",
              "Publish",
              "PublishDocumentation",
              "PushDocumentation",
              "Restore",
              "SonarQube",
              "Version"
            ]
          }
        },
        "TestResultPath": {
          "type": "string"
        },
        "TimeOut": {
          "type": "integer"
        },
        "Verbosity": {
          "type": "string",
          "description": "Logging verbosity during build execution. Default is 'Normal'",
          "enum": [
            "Minimal",
            "Normal",
            "Quiet",
            "Verbose"
          ]
        }
      }
    }
  }
}